<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kwanat.mma_mobilemanagementassistant.AddMessage">

    <EditText
        android:id="@+id/addMessageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="tytul"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/addMessageText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="message"
        android:inputType="textMultiLine|textImeMultiLine|textLongMessage"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="78dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/addMessageTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/addMessageSubmit"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:text="Button"
        tools:layout_editor_absoluteY="452dp"
        tools:layout_editor_absoluteX="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
